@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="login-form">
    <h2 class="text-center mb-4">Log In</h2>
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Email input -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" id="email" placeholder="Email" />
            <label for="email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Password input -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" id="password" placeholder="Password" />
            <label for="password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <!-- Remember me checkbox -->
        <div class="form-check mb-3">
            <input asp-for="Input.RememberMe" class="form-check-input" id="rememberMe" />
            <label for="rememberMe" class="form-check-label">Remember Me</label>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-lg w-100">Log In</button>
    </form>

    <!-- Links for forgotten password, registration, and email confirmation -->
    <div class="text-center mt-3">
        <a asp-page="./ForgotPassword" class="text-muted">Forgot your password?</a>
    </div>
    <div class="text-center mt-3">
        <a asp-page="./Register" class="text-muted">Register as a new user</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Login Form Styles */
    .login-form {
        padding: 30px;
        border-radius: 15px;
        background: #fff;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

        .login-form h2 {
            color: #8A64AD;
            font-weight: bold;
        }

    .form-floating label {
        color: #7F92C3;
    }

    .form-control {
        height: 50px;
        border-radius: 10px;
        border: 1px solid #8A64AD;
    }

        .form-control:focus {
            border-color: #7F92C3;
            box-shadow: 0 0 5px rgba(127, 146, 195, 0.5);
        }

    .btn-primary {
        background: linear-gradient(to right, #8A64AD, #7F92C3);
        border: none;
        color: white;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #7F92C3, #8A64AD);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .text-muted {
        color: #7F92C3 !important;
    }

        .text-muted:hover {
            color: #eeeee !important;
            text-decoration: underline;
        }
</style>
