@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="register-form">
    <h2 class="text-center mb-4">Create a New Account</h2>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- First Name and Last Name -->
        <div class="row">
            <div class="col-6">
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control" id="firstName" autocomplete="firstname" placeholder="First Name" />
                    <label for="firstName">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control" id="lastName" autocomplete="lastname" placeholder="Last Name" />
                    <label for="lastName">Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Email input -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" id="email" autocomplete="username" placeholder="name@example.com" />
            <label for="email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Password input -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" id="password" autocomplete="new-password" placeholder="Password" />
            <label for="password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <!-- Confirm Password input -->
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" id="confirmPassword" autocomplete="new-password" placeholder="Confirm Password" />
            <label for="confirmPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Register Form Styles */
    .register-form {
        padding: 30px;
        border-radius: 15px;
        background-color: #fff;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

        .register-form h2 {
            color: #8A64AD;
            font-weight: bold;
        }

    .form-floating label {
        color: #7F92C3;
    }

    .form-control {
        height: 50px;
        border-radius: 10px;
        border: 1px solid #8A64AD;
    }

        .form-control:focus {
            border-color: #7F92C3;
            box-shadow: 0 0 5px rgba(127, 146, 195, 0.5);
        }

    .btn-primary {
        background: linear-gradient(to right, #8A64AD, #7F92C3);
        border: none;
        color: white;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #7F92C3, #8A64AD);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .text-danger {
        font-size: 0.875rem;
        color: #e74a3b;
    }

</style>
