<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="d-flex">
            <!-- Sidebar -->
            <nav class="sidebar">
                <div class="sidebar-header">
                    <img src="https://cdn-icons-png.freepik.com/512/8742/8742495.png" alt="User Icon" class="user-icon" />
                    <h5 class="username">Hello @ViewData["FirstName"]</h5>
                </div>
                <ul class="nav flex-column mt-4">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Notes" asp-action="NewNote">New Note</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Notes" asp-action="MyNotes">My Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Timer" asp-action="Pomodoro">Pomodoro Timer</a>
                    </li>
                </ul>


                <hr />

                <h6 class="bookmark-title">Bookmarks</h6>
                <ul class="nav flex-column">
                    <li class="nav-item bookmark-item">
                        <span class="dot" style="background-color: #79D7F2;"></span> School
                    </li>
                    <li class="nav-item bookmark-item">
                        <span class="dot" style="background-color: #A1DE70;"></span> Work
                    </li>
                    <li class="nav-item bookmark-item">
                        <span class="dot" style="background-color: #F2D679;"></span> University
                    </li>
                    <li class="nav-item bookmark-item">
                        <span class="dot" style="background-color: #F2A7CB;"></span> Art Projects
                    </li>
                </ul>
            </nav>
             
            <!-- Main Content -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <!-- Content for logged-out users -->
        <main class="container">
            @RenderBody()
        </main>
    }

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
